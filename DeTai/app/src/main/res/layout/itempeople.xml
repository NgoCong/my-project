<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imgpeople_avatar"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/ic_account_box20dp"
            android:layout_alignParentLeft="true"
            />
        <TextView
            android:id="@+id/tvpeople_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nguyen Van A"
            android:textSize="20sp"
            android:paddingTop="5sp"
            android:textStyle="bold"
            android:textColor="#000"
            android:layout_toRightOf="@id/imgpeople_avatar"
            />
        <TextView
            android:id="@+id/tvpeople_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0123456789"
            android:textSize="18sp"
            android:paddingTop="5sp"
            android:layout_toRightOf="@id/imgpeople_avatar"
            android:layout_below="@id/tvpeople_name"
            />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>